// common include
ini_set('display_errors', '1');
error_reporting(E_ALL);
ini_set('error_log', '/var/log/runeaudio/upmpdcli_toggle.log');
define('APP', '/srv/http/app/');
require_once('/srv/http/app/libs/runeaudio.php');
// Connect to Redis backend include
require_once('/srv/http/app/libs/openredis.php');

// clear the log file
sysCmd('echo "--------------- start: airplay_toggle ---------------" > /var/log/runeaudio/upmpdcli_toggle.log');

// read status from /usr/lib/systemd/system/upmpdcli.service
$status = $argv[1]; // "onstart", "onplay", "onpause", "onstop"

switch($status) {
    case "onstart":
        // start UPnP / DLNA
        wrk_startUpmpdcli($redis);
        // send notify
        ui_notify($redis, 'UPnP / DLNA', 'Playback has been switched to an incoming UPnP / DLNA stream.');
        break;
    case "onplay":
        // play UPnP / DLNA
        wrk_playUpmpdcli($redis);
        // send notify
        ui_notify($redis, 'UPnP / DLNA', 'Playback started.');
        break;
    case "onpause":
        // play UPnP / DLNA
        wrk_pausedUpmpdcli($redis);
        // send notify
        ui_notify($redis, 'UPnP / DLNA', 'Playback paused.');
        break;
    case "onstop":
        // stop UPnP / DLNA
        wrk_stopUpmpdcli($redis);
        // send notify
        ui_notify($redis, 'UPnP / DLNA', 'UPnP / DLNA playback has completed. The player is now unlocked.');
        break;
}

// update player view
ui_libraryHome($redis, 'Server');
